@using Common.App.Core.Dapper.Models.Salary
@model IList<SalaryComponents>
<style>
    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #aaa;
        border-radius: 3px;
        padding: 5px;
        background-color: white !important;
        padding: 4px;
    }

    .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing, .dataTables_wrapper .dataTables_paginate {
        color: white !important;
    }
</style>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<div id="main-content">
    <div class="container-fluid">
        <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("AddComponent",new { src = 0 })" />
        @await Html.PartialAsync("_ListHeader", "Component List")
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-striped js-exportable dataTable table-custom spacing5" id="salary_component">
                                <thead>
                                    <tr>
                                        <th>S. No.</th>
                                        <th>Component Code</th>
                                        <th>Component Name</th>
                                        <th>Type</th>
                                        <th>Depends on Payment Days</th>
                                        <th>Is Tax Applicable</th>
                                        <th>Statistical Component</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int count = 0;}
                                    @foreach (SalaryComponents item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CompCode</td>
                                            <td>@item.CompName</td>
                                            <td>@item.CompType</td>
                                            <td>@item.IsDepend_PD</td>
                                            <td>@item.IsTaxApplicable</td>
                                            <td>@item.IsStatisticalComp</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    var $jq = jQuery.noConflict();
    $jq(document).ready(function(){
        $jq('#salary_component').DataTable();
    });
</script>