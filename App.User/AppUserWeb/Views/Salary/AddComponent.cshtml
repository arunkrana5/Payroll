@using Common.App.Data.Entities.Salary
@model Salary_Component
<div id="main-content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-md-6 col-sm-12">
                    <h2>Salary Component Add</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Salary Component Add</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 col-sm-12 text-right hidden-xs">
                    <a href="@Url.Action("ComponentList","Salary",new { src="0" })" class="btn btn-sm btn-primary btn-round" title="">Back</a>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card planned_task"> 
                    <div class="row clearfix">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Salary component</h2>
                                </div>
                                <div class="body">
                                    <form asp-controller="Salary" asp-action="AddComponent" class="form-auth-small m-t-20" asp-route-src="0">
                                        <input type="hidden" name="EntrySource" value="Web"/>
                                        <div class="form-group">
                                            <label>Component Code</label>
                                            <input type="text" class="form-control round" asp-for="CompCode" placeholder="Component Code">
                                            <span asp-validation-for="CompCode" class="text-red"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Component Name </label>
                                            <input type="text" class="form-control round" asp-for="CompName" placeholder="Component Name">
                                           <span asp-validation-for="CompName" class="text-red"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Type  </label>
                                            <select asp-items="ViewBag.CompType" asp-for="CompType" class="form-control round">

                                            </select>
                                            <span asp-validation-for="CompType" class="text-red"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Description </label>
                                            <textarea class="form-control" asp-for="Description" placeholder="Description" rows="5" cols="30"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <div class="row clearfix">
                                                <div class="col-lg-12 col-md-12">
                                                    <label class="fancy-checkbox">
                                                        <input type="checkbox" class="form-check-input" asp-for="IsDepend_PD" />
                                                        <span asp-validation-for="IsDepend_PD">Depends on Payment Days</span>
                                                    </label>
                                                    <label class="fancy-checkbox">
                                                        <input type="checkbox" class="form-check-input" asp-for="IsTaxApplicable" />
                                                        <span asp-validation-for="IsTaxApplicable">Is Tax Applicable</span>
                                                    </label>
                                                    <label class="fancy-checkbox">
                                                        <input type="checkbox" class="form-check-input" asp-for="IsStatisticalComp" />
                                                        <span asp-validation-for="IsStatisticalComp">Statistical Component</span>
                                                    </label>
                                                    <label class="fancy-checkbox">
                                                        <input type="checkbox" class="form-check-input" asp-for="IsRemoveZero" />
                                                        <span asp-validation-for="IsRemoveZero">Remove if Zero Valued</span>
                                                    </label>
                                                    <p id="error-checkbox"></p>
                                                </div>
                                            </div>
                                        </div> 
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
            </div> 
        </div>
    </div>
</div>