@using Common.App.Core.Dapper.Models.Salary

@model IList<SalaryStructureTran>;
<style>
    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #aaa;
        border-radius: 3px;
        padding: 5px;
        background-color: white !important;
        padding: 4px;
    }

    .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing, .dataTables_wrapper .dataTables_paginate {
        color: white !important;
    }

        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid #aaa;
            border-radius: 3px;
            padding: 5px;
            background-color: white !important;
            margin-left: 3px;
        }
</style>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<div class="tab-pane active show" id="@ViewBag.Doctype">
    <div class="body">
        <div class="table-responsive">
            <table class="table table-striped js-exportable dataTable table-custom spacing5" id="tblSturctTran">
                <thead>
                    <tr>
                        <th>S No</th>
                        <th>Structure</th>
                        <th>Component</th>
                        <th>Amount</th>
                        <th>Condition</th>
                        <th>Formula</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (SalaryStructureTran item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                <input type="hidden" name="StructTranID" value="@item.StructTranID" />
                                @item.Structure
                            </td>
                            <td>@item.Component</td>
                            <td>@item.Amount</td>
                            <td>@item.Condition</td>
                            <td>@item.Formula</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>