@using Common.App.Core.Dapper.Models.Masters
@using Common.App.Utility.Helpers
@model IList<MastersDepartment>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<div id="main-content">
    <div class="container-fluid">
        <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("AddDepartment","Masters",new { src = @EncryptDecrypt.Encrypt("0") })" />
        @await Html.PartialAsync("_ListHeader", "Department List")
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-striped js-exportable dataTable table-custom spacing5" id="tbl_Dept">
                                <thead>
                                    <tr>
                                        <th>S. No.</th>
                                        <th>Department Code</th>
                                        <th>Department Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = 0;
                                    }
                                    @foreach (MastersDepartment item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.DeptCode</td>
                                            <td>@item.DeptName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    var $jq = jQuery.noConflict();
    $jq(document).ready(function(){
        $jq('#tbl_Dept').DataTable();
    });
</script>